import stemming.lovins

class Stemmer:
  
  def __init__(self):
    '''
    Creates a new stemmer.
    '''
    self.exceptions = {
      'fucking': 'fucking',
      'freaking': 'freaking'
    }

  def stem(self, word):
    '''
    Stems a single word.
    '''
    if not word:
      # word is empty.
      return ''

    if word in self.exceptions:
